
.main{
  width:100%;
  background:  #F7F9FC;
}
.top{
  width: 750rpx;
  height: 320rpx;
}
.top_img{
  width: 100%;
  height: 320rpx;
}
.bar{
  width:100%;
  height:112rpx;
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
}
.bar_title{
  width:74rpx;
  height: 52rpx;
  line-height: 52rpx;
  margin-left:5.3%;
  margin-top: 30rpx;
  font-size: 37rpx;
  color: #000000;
}
.bar_more{
  width: 96rpx;
  height: 34rpx;
  margin-top: 40rpx;
  margin-left: 62.9%;
  font-size: 24rpx;
  color: #A0A3AF;
}
.bar_img{
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
  margin-top:47rpx;
}
.item{
  width: 89.3%;
  height: 212rpx;
  margin-left: 5.3%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  background-color: #FFFFFF;
  border-radius: 12rpx;
}
.item_left{
  width: 386rpx;
  height: 164rpx;
  margin-left: 30rpx;
  margin-top: 24rpx;
}
.item_left_top{
  width: 100%;
  height: 132rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #202437;
}
.item_left_bottom{
  width: 100%;
  height: 32rpx;
  font-size: 24rpx;
  color: #797E8B;
}
.item_right{
  width: 100px;
  height: 164rpx;
  margin-left: 30rpx;
  margin-top: 24rpx;
  border-radius: 8rpx;
}
::-webkit-scrollbar{
  width: 0rpx;
  height: 0rpx;
  background-color:transparent;
}

.float_btn{
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #FFFFFF;
  background: #1EC996;
}